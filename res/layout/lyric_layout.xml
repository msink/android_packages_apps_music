<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lyric"
    android:layout_width="match_parent"
    android:layout_height="200dip"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:visibility="invisible"
    >
    <TextView android:id="@+id/lyric_1"
        android:layout_width="match_parent"
        android:layout_height="27dip"
        android:layout_marginTop="23dip"
        android:gravity="center"
        android:textSize="12dip"
        android:textColor="@color/white"
        />
    <TextView android:id="@+id/lyric_2"
        android:layout_width="match_parent"
        android:layout_height="27dip"
        android:gravity="center"
        android:textSize="14dip"
        android:textColor="@color/white"
        />
    <TextView android:id="@+id/lyric_3"
        android:layout_width="match_parent"
        android:layout_height="27dip"
        android:gravity="center"
        android:textSize="16dip"
        android:textColor="@color/white"
        />
    <TextView android:id="@+id/lyric_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="24dip"
        android:textColor="#ff1b1bff"
        android:maxLines="2"
        />
    <TextView android:id="@+id/lyric_5"
        android:layout_width="match_parent"
        android:layout_height="27dip"
        android:gravity="center"
        android:textSize="18dip"
        android:textColor="@color/white"
        />
    <TextView android:id="@+id/lyric_6"
        android:layout_width="match_parent"
        android:layout_height="27dip"
        android:gravity="center"
        android:textSize="18dip"
        android:textColor="@color/white"
        />
</LinearLayout>
